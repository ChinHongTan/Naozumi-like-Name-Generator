    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": ["dom", "esnext"],
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}